<h1>Burger Restaurant!</h1>


<div class="row">
  <div class="col-md-6">
    <h2>Ready to be eaten</h2>
    <ul>
        {{#each burger}}
          {{#unless devoured}}
            <div class="row">
              <div class="col-md-6">
                <p>{{burger_name}}</p>
              </div>
              <div class="col-md-6">
                <button class="eaten" data-id="{{id}}" data-eaten="{{devoured}}">
                  Eat DA Burger!!
                </button>          
              </div>          
            </div>

          {{/unless}}  
        {{/each}}        
    </ul>    
  </div>
  <div class="col-md-6">
    <h2>Devoured burgers</h2>

    <ul>
        {{#each burger}}
          {{#if devoured}}
            <div class="row">
              <div class="col-md-6">
                <p>{{burger_name}}</p>
              </div>
              <div class="col-md-6">
                <button class="eaten" data-id="{{id}}" data-eaten="{{devoured}}">
                  Make a new burger!!
                </button>          
              </div>          
            </div>

          {{/if}}
        {{/each}}        
    </ul>    
  </div>
</div>




<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>